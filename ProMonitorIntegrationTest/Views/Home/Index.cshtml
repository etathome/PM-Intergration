@{
    Layout = null;
}
@model IEnumerable<ProMonitorIntegrationTest.ViewModels.LearnerProgressViewModel>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ProMonitor Integration Test Application</title>
    <style>
        h1, h2, th, td  { font-family:arial; font-size:80%; }
        h1, h2, pre { margin: 0 0 10px 0; } 
        h1 { font-size:90%; }
        table { width:100%; border-collapse: collapse; }
        th { border-bottom: solid 1px black; }
        td { border-bottom: solid 1px grey; height: 30px; }
        .text-centre { text-align:center; }
    </style>
</head>
<body>
<h1>Compass Computer Consultants ProMonitor Integration Test Harness</h1>
